<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/iv_register_logo"
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:layout_marginTop="80dp"
        android:tint="?android:attr/colorForeground"
        app:layout_constraintEnd_toStartOf="@+id/gl_register_right"
        app:layout_constraintStart_toStartOf="@+id/gl_register_left"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/tv_register_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="TilkTalk"
        android:textSize="28sp"
        android:textColor="?android:attr/colorForeground"
        app:layout_constraintEnd_toEndOf="@+id/iv_register_logo"
        app:layout_constraintStart_toStartOf="@+id/iv_register_logo"
        app:layout_constraintTop_toBottomOf="@+id/iv_register_logo" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_register_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="295dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_register_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="60dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_register_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="60dp" />

    <TextView
        android:id="@+id/tv_register_email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="E-mail"
        android:textColor="?android:attr/colorForeground"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/gl_register_left"
        app:layout_constraintTop_toTopOf="@+id/gl_register_top" />

    <EditText
        android:id="@+id/et_register_email"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:background="@drawable/input_text_style"
        android:backgroundTint="?android:attr/colorForeground"
        android:foregroundTint="?android:attr/colorForeground"
        android:ems="10"
        android:inputType="textWebEmailAddress"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="14sp"
        android:textColor="?android:attr/colorForeground"
        app:layout_constraintEnd_toStartOf="@+id/gl_register_right"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/gl_register_left"
        app:layout_constraintTop_toBottomOf="@+id/tv_register_email_label" />

    <TextView
        android:id="@+id/tv_register_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat"
        android:text="Display Name"
        android:textColor="?android:attr/colorForeground"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/gl_register_left"
        app:layout_constraintTop_toBottomOf="@+id/et_register_email" />

    <EditText
        android:id="@+id/et_register_name"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:background="@drawable/input_text_style"
        android:backgroundTint="?android:attr/colorForeground"
        android:foregroundTint="?android:attr/colorForeground"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="16sp"
        android:textColor="?android:attr/colorForeground"
        app:layout_constraintEnd_toStartOf="@+id/gl_register_right"
        app:layout_constraintStart_toStartOf="@+id/gl_register_left"
        app:layout_constraintTop_toBottomOf="@+id/tv_register_name_label" />

    <EditText
        android:id="@+id/et_register_password"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:background="@drawable/input_text_style"
        android:backgroundTint="?android:attr/colorForeground"
        android:foregroundTint="?android:attr/colorForeground"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="16sp"
        android:textColor="?android:attr/colorForeground"
        app:layout_constraintEnd_toStartOf="@+id/gl_register_right"
        app:layout_constraintStart_toStartOf="@+id/gl_register_left"
        app:layout_constraintTop_toBottomOf="@+id/tv_register_password_label" />

    <TextView
        android:id="@+id/tv_register_password_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat"
        android:text="Password"
        android:textColor="?android:attr/colorForeground"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/gl_register_left"
        app:layout_constraintTop_toBottomOf="@+id/et_register_name" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="134dp"
        android:layout_height="36dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/input_text_style"
        android:fontFamily="@font/montserrat_bold"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="Register"
        android:textColor="?android:attr/colorForeground"
        android:textStyle="bold"
        app:backgroundTint="?android:attr/colorForeground"
        app:layout_constraintEnd_toStartOf="@+id/gl_register_right"
        app:layout_constraintStart_toStartOf="@+id/gl_register_left"
        app:layout_constraintTop_toBottomOf="@+id/et_register_password" />

    <ProgressBar
        android:id="@+id/pb_register"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationZ="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_register_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/montserrat"
        android:text="Already have an account? Login"
        android:textColor="?android:attr/colorForeground"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/gl_register_right"
        app:layout_constraintStart_toStartOf="@+id/gl_register_left"
        app:layout_constraintTop_toBottomOf="@+id/btn_register" />

</androidx.constraintlayout.widget.ConstraintLayout>